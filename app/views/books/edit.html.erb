<main>
 <p id="notice"><%= notice %></p>
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 ps-5 ps-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
       <div class="alert">
        <h2><%= @book.errors.count %>errors have occurred.</h2>
        <ul>
         <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
        </ul>
       </div>
      <% end %>

      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
       <div class="form-group">
        <label for="book_title">Title</label><br>
         <%= f.text_field :title %>
       </div>
       <div class="form-group">
        <label for="book_opinion">Opinion</label><br>
         <%= f.text_field :body %>
       </div>
       <div class="form-group">
        <%= f.submit "Update Book",class: "btn btn-success" %>
       </div>
       <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
      <% end %>
    </div>
   </div>
  </div>
</main>