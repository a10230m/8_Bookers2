<div class="container">
  <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 ps-5 ps-sm-0 mx-auto">
          <br>
        <h1>Editing Book</h1>
        
        <% if @book.errors.any? %>
        <div class="alert">
          <%= @book.errors.count %>件のエラーが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_field :body %>
        </div>
        <%= f.submit "Update Book",class: "btn btn-success" %>
        <br>

        <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", book_path %>
        <% end %>
      </div>

  </div>
</div>
