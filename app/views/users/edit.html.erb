<main>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 ps-5 px-sm-0 mx-ayto"><br>
    <h2>User info</h2>
    <% if @user.errors.any? %>
    <div class="alert">
     <%= @user.errors.count %>errors have occurred.
     <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
     </ul>
    </div>
    <% end %>

    <%= form_with model: @user do |f| %>
    <div class="group">
     <label for="inputName">Name</label><br>
     <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%>
    </div><br>
    <div class="group">
     <label for="inputImage">Image</label><br>
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div><br>

    <div class="group">
     <label for="inputIntroduction">Introduction</label><br>
     <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:""%>
    </div><br>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
   </div>
  </div>
 </div>
</main>